{
  "compilerOptions": {
    "target": "ES2020",                   
    "module": "ESNext",                  
    "moduleResolution": "node",          
    "esModuleInterop": true,             
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",                    
    "rootDir": ".",                      
    "sourceMap": true,                   
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}
